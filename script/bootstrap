#!/usr/bin/env bash

function bootstrap {
  local shome="$(cd -P -- "${BASH_SOURCE%/*}/.." && pwd -P)"
  source "$shome/script/profile"

  block compile virtualenv
  ln -nfs ../vendor/virtualenv/bin/pygmentize "$shome/bin/"
  ln -nfs ../vendor/virtualenv/bin/pycco "$shome/bin/"

  block compile yarn
  ln -nfs ../node_modules/.bin/prettier "$shome/bin/"
  ln -nfs ../node_modules/.bin/http-server "$shome/bin/"
}

bootstrap
